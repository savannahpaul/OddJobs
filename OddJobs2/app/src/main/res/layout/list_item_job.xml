<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/job_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/questionmark"
    />
    <TextView android:id="@+id/list_item_job_title_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/job_image_view"
              android:textStyle="bold"
              android:padding="4dp"
              tools:text="Job Title"/>

    <TextView android:id="@+id/list_item_job_price_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/list_item_job_title_text_view"
              android:textStyle="bold"
              android:padding="4dp"
              tools:text="$.$$"/>

    <TextView android:id="@+id/list_item_job_distance_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/list_item_job_price_text_view"
              android:textStyle="bold"
              android:padding="4dp"
              tools:text="X.X Mi"/>

    <TextView android:id="@+id/list_item_job_description_text_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/job_image_view"
              android:layout_below="@id/list_item_job_title_text_view"
              android:padding="4dp"
              tools:text="Job Description"/>


</RelativeLayout>