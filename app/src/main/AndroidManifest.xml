<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.csci448.savannahpaul.oddjobs">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
            android:allowBackup="true"
            android:icon="@drawable/thumbnail"
            android:label="@string/app_name"
            android:roundIcon="@drawable/thumbnail"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CreateAccountActivity">
        </activity>
        <activity android:name=".NavBarActivity">
        </activity>
        <activity android:name=".JobViewActivity"></activity>
        <activity android:name=".MessagesActivity"></activity>
    </application>

</manifest>