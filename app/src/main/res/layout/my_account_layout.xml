<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
    <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Your Name"
    />
    <ImageView
            android:id="@+id/user_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/name_text_view"
            android:src="@drawable/mysteryman"
    />
    <TextView
            android:id="@+id/bio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_image_view"
            android:textSize="20dp"
            android:text="Bio:"
    />
    <TextView
            android:id="@+id/bio_text_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bio_text"
            android:textSize="20dp"
    />
    <TextView
            android:id="@+id/acc_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bio_text_view"
            android:textSize="20dp"
            android:text="Account Information"
    />
    <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acc_info_text"
            android:textSize="15dp"
            android:text="Username:"
    />

    <TextView
            android:id="@+id/username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acc_info_text"
            android:layout_toRightOf="@+id/username_text"
            android:textSize="15dp"
    />
    <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_text"
            android:textSize="15dp"
            android:text="Email:"
    />

    <TextView
            android:id="@+id/email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_text"
            android:layout_toRightOf="@+id/email_text"
            android:textSize="15dp"
    />

    <TextView
            android:id="@+id/balance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_text_view"
            android:textSize="15dp"
            android:text="Balance:"
            android:paddingBottom="15dp"
    />

    <TextView
            android:id="@+id/balance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_text_view"
            android:layout_toRightOf="@+id/balance_text"
            android:textSize="15dp"

    />

    <TextView
            android:id="@+id/review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/balance_text"
            android:textSize="20dp"
            android:text="Reviews"
    />
    <TextView
            android:id="@+id/review_text_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/review_text"
            android:textSize="20dp"
    />
    <TextView
            android:id="@+id/history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_text_view"
            android:textSize="20dp"
            android:text="Job History"
    />
    <TextView
            android:id="@+id/history_text_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/history_text"
            android:textSize="20dp"
    />
</RelativeLayout>